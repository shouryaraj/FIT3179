{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 400,
  "config": {
    "view": { "stroke": "transparent" },
    "scale": { "bandPaddingInner": 0.2 },
    "axis": { "labelFont": "san-serif", "titleFont": "san-serif" },
    "legend": { "labelFont": "san-serif", "titleFont": "san-serif" },
    "header": { "labelFont": "san-serif", "titleFont": "san-serif" },
    "mark": { "font": "san-serif" },
    "title": { "font": "san-serif", "subtitleFont": "san-serif" }
  },
  "title": {
    "text": "Successful Climb to Everest Year Wise",
    "color": "black",
    "fontSize": 25,
    "anchor": "middle",
    "dy": -10
  },
  "data": {
    "url": "https://raw.githubusercontent.com/shouryaraj/FIT3179/main/everst_success_summit.csv"
  },
  "params": [
    {
      "name": "year_slider",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 1952,
        "max": 2019,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "nominal",
      "axis": {
        "title": "Year",
        "titleFontSize": 15,
        "labelFontSize": 15,
        "labelFontWeight": "bold"
      }
    },
    "y": {
      "field": "mbrcnt",
      "type": "quantitative",
      "axis": {
        "title": "Number Of Climbers",
        "titleFontSize": 16,
        "labelFontSize": 16,
        "labelFontWeight": "bold"
      }
    },

    "fillOpacity": {
      "condition": { "param": "select", "value": 1 },
      "value": 0.3
    },

    "strokeWidth": {
      "condition": [
        { "param": "select", "empty": false, "value": 2 },
        { "param": "highlight", "empty": false, "value": 1 }
      ],
      "value": 0
    },
    "tooltip": [
      { "field": "mbrcnt", "type": "quantitative", "title": "Number Of Everest Climbers" },
         { "field": "year", "type": "nominal", "title": "Year"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "fill": "#4f7bd1",
        "stroke": "black",
        "cursor": "pointer"
      },
      "params": [
        {
          "name": "highlight",
          "select": { "type": "point", "on": "mouseover" }
        },
        { "name": "select", "select": "point" }
      ],

      "transform": [{ "filter": "datum.year > year_slider" }]
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 2,
        "dy": -10,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },

      "transform": [{ "filter": "datum.year > year_slider" }],
      "encoding": {
        "text": { "field": "mbrcnt", "type": "quantitative" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['year'] == '1953'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
